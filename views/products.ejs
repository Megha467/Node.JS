<body>
   <h1>Products List </h1> 
   <table>
       <tr>
    <th>Title</th>
    <th>Price</th>
    <th>Edit</th>
    <th>Delete</th>
    <th>View</th>
    </tr>
    <% for(var i=0; i<products.length; i++ ) { %>
    <tr> 
        <td><%=products[i].title%>     </td>
        <td><%=products[i].price %>    </td>
        <td><button> <a href="/products/getProduct/<%=products[i]._id%>"> Edit </a></button></td>
        <td><button> <a href="/products/delete/<%=products[i]._id%>">  Delete </a> </button> </td>   
        <!-- <td><button> <a href="/products/View/<%=products[i]._id%>">  View </a> </button> </td>      -->
    </tr>
    <% } %>
    </table>
</body>
